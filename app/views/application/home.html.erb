<!--This is a dirty hack to get the vh to expand when scrolling down-->
<script>
    $(document).ready(function() {
        setHeight();
    });

    $( window ).on( "orientationchange", function( event ) {
        setHeight();
    });

    function setHeight () {
        setTimeout(function () {
            $('.container').css({height: window.innerHeight - 50});
        }, 250);
    }
</script>