<div class="row">
  <div class="col-md-12 blog-post">
    <div class="blog-post-card">
      <img class="blog-post-thumb-index" src="<%= post.first_image %>">
      <div class="blog-post-card-content">
        <div class="blog-post-title">
          <%= link_to(post.title, blog_post_path(post)) %>
        </div>
        <small><p> <%= post.publish_date.strftime("Posted: %F") %> by <%= post.user.nil? ? 'unknown' : post.user.first_name %></p></small>
        <%= truncate(strip_tags(post.body), :length => 120)  %>
      </div>
    </div>
  </div>
</div>
