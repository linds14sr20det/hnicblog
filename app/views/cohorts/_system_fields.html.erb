<div class="nested-fields well">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date_description %>
    <%= f.text_field :date_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :max_players %>
    <%= f.number_field :max_players, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.fields_for :attachment_attributes do |ff| %>
      <%= ff.label :attachment_uploader, "Players pack" %>
      <% unless f.object.attachment.nil? %>
        <br>
        <a href="<%=f.object.attachment.url %>">View Current Attached Players Pack</a>
        <br>
        -- OR --
      <% end %>
      <%= ff.file_field :attachment_uploader, class: 'form-control' %>
      <%= ff.hidden_field :url, class: 'url-holder' %>
    <% end %>
  </div>

  <%= link_to_remove_association('Remove this', f, class: 'btn btn-primary') %>
</div>