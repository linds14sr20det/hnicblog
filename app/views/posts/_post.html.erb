<tr>
  <td><%= post.publish_date.strftime("%B %d, %Y") %></td>
  <td><%= post.title %></td>
  <td><%= post.user.nil? ? 'unknown' : post.user.name %></td>
  <td><%= link_to 'edit', edit_post_path(post) %> | <%= link_to "delete", post, method: :delete,
                                                                    data: { confirm: "You sure?" } %></td>
</tr>