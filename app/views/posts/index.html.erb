<% provide(:title, 'All Posts') %>
<div class="row title-row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h1>Posts</h1>
  </div>
  <div style="margin-left:auto">
    <%= link_to "New Post", new_post_path, class: "btn btn-primary"%>
  </div>
</div>

<% unless @posts.nil? %>
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <h3>List of Posts</h3>
      </div>
    </div>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Publish On Date</th>
        <th>Title</th>
        <th>Author</th>
        <th>Actions</th>
      </tr>
      </thead>
      <%= render @posts %>
    </table>
    <%= will_paginate @posts %>
  </div>
<% end %>
