<div class="nested-fields well">
  <div class="form-group">
    <% unless f.object.url.nil? %>
      <%= image_tag f.object.url, class: 'img-responsive' %>
    <% else %>
      <%= f.label :attachment_uploader %>
      <%= f.file_field :attachment_uploader, accept: "image/*;capture=camera", multiple: 'multiple', class: 'form-control' %>
    <% end %>
    <%= f.hidden_field :url, class: 'url-holder' %>
  </div>
  <%= link_to_remove_association('Remove this attachment', f, class: 'btn btn-primary') %>
</div>

