<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col_md-12">
    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col_md-12">
    <p>
      <strong>Role:</strong> <%= @user.role.titleize %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
